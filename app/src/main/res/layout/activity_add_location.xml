<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddLocationActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/main_color"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:layout_toEndOf="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LÃ¤gg till plats"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montsemibold"
            android:textColor="@color/black"
            />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLATSNAMN"
        android:textSize="13sp"
        android:fontFamily="@font/montsemibold"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_back"
        android:hint="Namn"
        android:fontFamily="@font/montmedium"
        android:textSize="13sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        />
    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POSITION"
        android:textSize="13sp"
        android:fontFamily="@font/montsemibold"
        android:textColor="@color/black"
        />

    <fragment
        android:layout_marginTop="10dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />

    <LinearLayout
        android:id="@+id/addLocation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="#F1F1F1"
        android:gravity="center_vertical"
        >

        <TextView

            android:fontFamily="@font/montsemibold"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vald position"
            />

        <TextView
            android:id="@+id/latitudeandlongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/montmedium"
            android:textAlignment="textEnd"
            android:layout_marginEnd="20dp"

            />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/category_back"
        android:text="Spara"
        android:fontFamily="@font/montbold"

        />
</LinearLayout>
